<div id='search_results' class='mt-3'>
  <% if documents.exists? %>
    <div class='container'>
      <div class='row mt-2'>
        <% @documents.each do |doc| %>
          <div class='card my-2'>
            <div class='card-body'>
              <h5 class='card-title'> File: <%= Document.find(doc.id).file.identifier %></h5>
              <p class='card-text'> Text body: <%= doc.text_body %> </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <p class='text-center lead'> Sorry, but nothing found =( </p>
  <% end %>
</div>
